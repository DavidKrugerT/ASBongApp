<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/constraintLayout"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimaryDark">



    <ListView
        android:id="@+id/DishListView"
        android:layout_width="500dp"
        android:layout_height="650dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/background"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toStartOf="@+id/ProgressListView"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toEndOf="@+id/OrderListView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.275" />

    <ListView
        android:id="@+id/OrderListView"
        android:layout_width="244dp"
        android:layout_height="648dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/background"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.277" />

    <ListView
        android:fontFamily="@font/simonetta_black"
        android:id="@+id/ProgressListView"
        android:layout_width="348dp"
        android:layout_height="650dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/background"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.275" />

    <TextView
        android:id="@+id/OrderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:fontFamily="@font/simonetta_black"
        android:text="Orders"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/OrderListView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:fontFamily="@font/simonetta_black"
        android:id="@+id/DishTextView"
        android:layout_width="86dp"
        android:layout_height="34dp"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:layout_marginBottom="12dp"
        android:text="Dishes"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/DishListView"
        app:layout_constraintStart_toStartOf="@+id/DishListView" />

    <TextView
        android:id="@+id/StartedDishesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:fontFamily="@font/simonetta_black"
        android:text="Cooking Dishes"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/ProgressListView"
        app:layout_constraintStart_toStartOf="@+id/ProgressListView" />

</androidx.constraintlayout.widget.ConstraintLayout>

