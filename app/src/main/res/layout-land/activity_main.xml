<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ListView
        android:id="@+id/DishListView"
        android:layout_width="888dp"
        android:layout_height="0dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="11dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/AddRandomOrder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/TableListView"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/TableListView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="86dp"
        android:layout_marginRight="86dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/DishListView"
        app:layout_constraintEnd_toStartOf="@+id/DishListView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/DishListView"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/AddRandomOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="122dp"
        android:layout_marginLeft="122dp"
        android:layout_marginBottom="67dp"
        android:text="Add Random Order"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/DishListView"
        app:layout_constraintTop_toBottomOf="@+id/DishListView" />

</androidx.constraintlayout.widget.ConstraintLayout>